<h1>Kategorie</h1>
<a href="/" class="btn btn-info">Strona główna</a> <br>

<div class="mt-5 row">
     <div class="col-6">
          <h3>KOSZTY</h>
               <a href="/panel/kategorie/dodaj-koszt" class="btn btn-success mt-3 ms-1">DODAJ</a>

               <div class="mt-3 h5">

                    <% costCategories.forEach(x=> { %>

                         <div class="card mt-2">
                              <div class="card-body">

                                   <p class="card-title mb-3"><%-x.category %></p>

                                   <div class="d-flex flex-row-reverse">
                                        <a class="btn btn-danger me-1" href="/panel/kategorie/<%- x.category %>/usun">USUŃ</a>
                                        <a class="me-2 btn btn-primary"
                                             href="/panel/kategorie/<%- x.category %>/edytuj">EDYTUJ</a>
                                   </div>
                              </div>
                         </div>

                         <% }) %>
               </div>
     </div>

     <div class="col-6">
          <h3>DOCHODY</h>
               <a href="/panel/kategorie/dodaj-dochod" class="btn btn-success mt-3 ms-1">DODAJ</a>

               <div class="mt-3 h5">

                    <% incomeCategories.forEach(x=> { %>

                         <div class="card mt-2">
                              <div class="card-body">

                                   <p class="card-title mb-3"><%-x.category %></p>

                                   <div class="d-flex flex-row-reverse">
                                        <a class="btn btn-danger me-1" href="/panel/kategorie/<%- x.category %>/usun">USUŃ</a>
                                        <a class="me-2 btn btn-primary"
                                             href="/panel/kategorie/<%- x.category %>/edytuj">EDYTUJ</a>
                                   </div>
                              </div>
                         </div>

                         <% }) %>
               </div>
     </div>
</div>